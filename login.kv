########################################################################
## LOGIN SCREEN
########################################################################
MDScreen:
    name: "MainScreen"



    FitImage:
        source: 'assets/images/Login_Background_Blour.jpg'



    MDLabel:
        text: "MyPass"
        pos_hint: {"center_x": .5, "center_y": .8}
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size: "45sp"
        font_name: "assets/fonts/Avantgardegothicc bolditalic.otf"



    MDLabel:
        text: "Ваш пропуск в смартфоне"
        pos_hint: {"center_x": .5, "center_y": .750}
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size: "15sp"
        font_name: "assets/fonts/ofont.ru_AvantGardeGothicCTT (1).ttf"



    MDTextFieldRound:
        id: user
        hint_text: "Логин"
        hint_text_color: 1, 1, 1, 1
        normal_color: 148/255, 152/255, 156/255, 0.5
        color_active: 148/255, 152/255, 156/255, 1
        halign: "center"
        size_hint: 0.8, None
        width: 200
        font_size: "15sp"
        font_name: "assets/fonts/ofont.ru_AvantGardeGothicCTT (1).ttf"
        pos_hint: {"center_x": .5, "center_y": .6}


    MDTextFieldRound:
        id: password
        hint_text: "Пароль"
        hint_text_color: 1, 1, 1, 1
        text_color: 1, 1, 1, 1
        normal_color: 148/255, 152/255, 156/255, 0.5
        color_active: 148/255, 152/255, 156/255, 1
        halign: "center"
        size_hint: 0.8, None
        width: 200
        font_size: "15sp"
        font_name: "assets/fonts/ofont.ru_AvantGardeGothicCTT (1).ttf"
        pos_hint: {"center_x": .5, "center_y": .5}
        password: True


    Image:
        source: "assets/images/login.png"
        pos_hint: {"center_x": .10, "center_y": .6}
        size_hint_y: 0.1



    Image:
        source: "assets/images/password.png"
        pos_hint: {"center_x": .90, "center_y": .5}
        size_hint_y: 0.1


    MDFillRoundFlatButton:
        text: "          Войти          "
        text_color: 0, 0, 0, 100
        md_bg_color: 1, 1, 1, 1
        font_size: "20sp"
        halign: "center"
        size_hint: 0.75, 0.07
        font_name: "assets/fonts/ofont.ru_AvantGardeGothicCTT (1).ttf"
        pos_hint: {"center_x": .5, "center_y": .4}



    MDTextButton:
        text: "Забыли пароль?"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        halign: "center"
        font_name: "assets/fonts/ofont.ru_AvantGardeGothicCTT (1).ttf"
        font_size: "15sp"
        pos_hint: {"center_x": .5, "center_y": .33}
        size_hint: 0.5, None